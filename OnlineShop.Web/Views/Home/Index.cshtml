            <div id="recommended-item-carousel" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    @{
                        var flag = 0;
                        var className = "active";

                        for (int i = 0; i <= Model.TopSaleProducts.Count(); i += flag)
                        {
                            <div class="item @className">

                                @foreach (var item in Model.TopSaleProducts.Skip(flag).Take(4))
                                {
                                    var url = "/" + item.Alias + ".p-" + item.ID + ".html";
                                    <div class="grid_1_of_4 images_1_of_4 products-info">
                                        <div class="product-image-wrapper">
                                            <div class="single-products">
                                                <div class="productinfo text-center">
                                                    <a href="@url">
                                                        <img src="~/Assets/Images/@item.Image" style="cursor : pointer;height : 250px" alt="" />
                                                    </a>
                                                   
                                                    @if (item.PromotionPrice != 0)
                                                    {
                                                        <div class="row">
                                                            <div class="col-md-6 price_left">

                                                                <p>@item.Price.ToString("N0").Replace(",", ".")đ</p>
                                                            </div>
                                                            <div class="col-md-6 price_right">
                                                                <p>@item.OriginalPrice.ToString("N0").Replace(",", ".")đ</p>
                                                            </div>
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <h2>@item.Price.ToString("N0").Replace(",", ".") Vnđ</h2>
                                                    }
