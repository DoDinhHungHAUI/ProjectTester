
@model OnlineShop.Web.Models.LoginViewModel


@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-grids">
    <div class="row">
        <div class="col-md-7">
            <div class="login-right">
                <div class="title_dangNhap">
                    <h3>Đăng nhập</h3>
                    <hr />
                </div>
                <p style="color : red;">@ViewBag.Message</p>

                @using (Html.BeginForm("Login", "Account", new { returnUrl = @ViewBag.ReturnUr }, FormMethod.Post))
                {
                    <div class="form-group">
                        <label>Tài Khoản <span style="color : red;"> (*) </span></label>
                        @Html.TextBoxFor(model => model.UserName, new { placeholder = "Tài khoản", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Mật khẩu <span style="color : red;"> (*) </span></label>
                        @Html.PasswordFor(model => model.Password, new { placeholder = "Mật khẩu", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <button class="btn btn-warning" type="submit"><i class="fas fa-sign-in-alt"></i> Đăng nhâp</button>
                        @*<input type="submit" value="Đăng nhập" class="btn btn-warning" />*@
                    </div>

                }

            </div>
        </div>
        <div class="col-md-5">
            <div class="loginWithSocial">
                @Html.Partial("ExternalLoginsListPartial", new OnlineShop.Web.Models.ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
            </div>
        </div>
    </div>
   
    <div class="login-left">
        <h3>Chưa có tài khoản</h3>
        <p>Nếu bạn chưa có tài khoản vui lòng đăng ký tại link dưới đây:</p>
        <a class="acount-btn" href="/dang-ky.html">Đăng ký thành viên</a>
    </div>
    <div class="clearfix"> </div>
</div>

<style>
    .login-right{
        width : 90% !important;
    }
    #UserName{
        height : 34px;
        cursor:pointer;
    }
    #UserName:focus {
       box-shadow : none;
    }
    #Password {
        height: 34px;
        cursor: pointer;
    }

    #Password:focus {
        box-shadow: none;
    }

    .title_dangNhap{
        padding : 5px 20px;
    }
    .title_dangNhap h3{
       text-align: center;
    }

    .text-danger{
        color : red;
    }

    .loginWithSocial{
        width : 90%;
    }
</style>


